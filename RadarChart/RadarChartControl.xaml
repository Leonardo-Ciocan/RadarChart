<UserControl x:Class="RadarChart.RadarChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="Black" BorderThickness="0" Margin="5">
        <Canvas x:Name="root">
            <Polyline x:Name="ValuesShape" Stroke="Black" StrokeThickness="2" Fill="LightBlue" Opacity="0.75" Panel.ZIndex="3"></Polyline>
        </Canvas>
    </Border>
</UserControl>
